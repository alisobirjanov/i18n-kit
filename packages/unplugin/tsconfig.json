{
  "compilerOptions": {
    "target": "ES2020",
    "baseUrl": ".",
    "module": "ES2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["**/*.spec.ts", "**/*.css"]
}
